<h1>Daily View for <%= @date.strftime("%A, %B %d, %Y") %></h1>

<!-- Navigation Controls -->
<div class="d-flex justify-content-between mb-3">
  <div>
    <%= link_to 'Prev', calendar_daily_path(date: @prev_day), class: 'btn btn-outline-primary' %>
    <%= link_to 'Today', calendar_daily_path(date: Date.today), class: 'btn btn-outline-success' %>
    <%= link_to 'Next', calendar_daily_path(date: @next_day), class: 'btn btn-outline-primary' %>
  </div>

  <!-- Links to switch between views, right-aligned -->
  <div class="ml-auto">
    <%= link_to 'Switch to Weekly View', calendar_weekly_path(date: @date), class: 'btn btn-outline-secondary' %>
    <%= link_to 'Switch to Monthly View', calendar_monthly_path(date: @date), class: 'btn btn-outline-secondary' %>
  </div>
</div>

<!-- Display Events for the Day -->
<%
=begin%>
 <% @date.events.each do |event| %>
  <div class="mb-2">
    <h6><%= event.title %></h6>
    <p><%= event.description %></p>
    <small class="text-muted">Time: <%= event.start_time.strftime("%I:%M %p") %></small>
  </div>
<% end %>

<% if @date.events.empty? %>
  <p>No events for today.</p>
<% end %>
<%
=end%>
